generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  QUEUED 
  RUNNING 
  COMPLETED 
  FAILED 
}

enum TaskStep {
  NONE 
  PLANNING 
  CODING 
  TESTING 
  FIXING 
  DONE
}

model Task {
  id              String       @id    @default(uuid())
  githubIssueUrl  String
  status          TaskStatus   @default(QUEUED)
  currentStep     TaskStep     @default(NONE)
  errorMessage    String?
  
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}